@using Microsoft.Ajax.Utilities
@model Codenation.Web.Models.ResponseCodenation

<div class="modal" tabindex="-1" role="dialog" id="modalAnswer">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title text-center"><i class="fa fa-globe"></i> Resposta do Teste</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <thead class="thead thead-dark">
                    <tr>
                        <th>Tipo</th>
                        <th>Valor</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="codenation">StatusCode:</td>
                        <td class="codenation">@Html.DisplayFor(model => model.StatusCode)</td>
                    </tr>
                    <tr>
                        <td class="codenation">Sucesso?</td>
                        <td class="codenation">@Html.DisplayFor(model => model.IsSuccessful)</td>
                    </tr>
                    <tr>
                        <td class="codenation">Nota:</td>
                        <td class="codenation text-success" style="font-size: 1.9rem">@Model.Content.Score</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> Fechar</button>
            </div>
        </div>
    </div>
</div>